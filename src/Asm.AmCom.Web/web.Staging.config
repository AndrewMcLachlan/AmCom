<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

  <system.webServer>

    <aspNetCore processPath="dotnet" arguments=".\Asm.AmCom.Web.dll" stdoutLogEnabled="false" xdt:Transform="SetAttributes(processPath,arguments,stdoutLogEnabled)">
      <environmentVariables xdt:Transform="Replace" />
    </aspNetCore>
    <rewrite>
      <rules>
        <rule name="Canonical Host Name" enabled="true" xdt:Locator="Match(name)" xdt:Transform="SetAttributes(enabled)">
          <conditions>
            <add input="{HTTP_HOST}" xdt:Locator="Match(input)" xdt:Transform="Remove" />
            <add input="{HTTP_X_FORWARDED_FOR}" pattern="^staging\.andrewmclachlan\.com$" xdt:Locator="Match(input)" xdt:Transform="SetAttributes(pattern)" />
          </conditions>
          <action type="Redirect" url="https://staging.andrewmclachlan.com/{R:1}" xdt:Locator="Match(type)" xdt:Transform="SetAttributes(url)" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>

</configuration>