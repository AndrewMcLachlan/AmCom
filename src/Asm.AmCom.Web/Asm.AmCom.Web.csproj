<Project Sdk="Microsoft.NET.Sdk.Web">

  <Import Project="..\..\Common.props" />

  <PropertyGroup>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <GenerateRuntimeConfigDevFile>true</GenerateRuntimeConfigDevFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Serilog.Sinks.Seq" Version="8.0.0" />
    <PackageReference Include="Umbraco.Cms" Version="13.4.1" />
  </ItemGroup>

  <!-- Force windows to use ICU. Otherwise Windows 10 2019H1+ will do it, but older windows 10 and most if not all windows servers will run NLS -->
  <ItemGroup>
    <PackageReference Include="Asm" Version="3.2.260" />
    <PackageReference Include="Asm.AspNetCore.Mvc" Version="3.2.260" />
    <PackageReference Include="Asm.Net" Version="3.2.260" />
    <PackageReference Include="Microsoft.ICU.ICU4C.Runtime" Version="72.1.0.3" />
    <PackageReference Include="Umbraco.StorageProviders.AzureBlob" Version="13.0.1" />
    <ProjectReference Include="..\Asm.AmCom\Asm.AmCom.csproj" />

    <RuntimeHostConfigurationOption Condition="$(RuntimeIdentifier.StartsWith('linux')) Or $(RuntimeIdentifier.StartsWith('win')) Or ('$(RuntimeIdentifier)' == '' And !$([MSBuild]::IsOSPlatform('osx')))" Include="System.Globalization.AppLocalIcu" Value="72.1.0.3" />
  </ItemGroup>

  <!-- Installed specifically to overcome security vulnerabilities in dependent packages -->
  <ItemGroup>
    <PackageReference Include="Azure.Identity" Version="1.12.0" />
    <PackageReference Include="BouncyCastle.Cryptography" Version="2.4.0" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="5.2.2" />
    <PackageReference Include="Microsoft.Identity.Client" Version="4.64.0" />
    <PackageReference Include="Microsoft.IdentityModel.JsonWebTokens" Version="8.0.2" />
    <PackageReference Include="MimeKit" Version="4.7.1" />
    <PackageReference Include="System.Formats.Asn1" Version="8.0.1" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.0.2" />
    <PackageReference Include="System.Text.Json" Version="8.0.4" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="logs\**" />
    <Compile Remove="node_modules\**" />
    <Compile Remove="wwwroot\media\**" />
    <EmbeddedResource Remove="logs\**" />
    <EmbeddedResource Remove="node_modules\**" />
    <EmbeddedResource Remove="wwwroot\media\**" />
    <None Remove="logs\**" />
    <None Remove="node_modules\**" />
    <None Remove="wwwroot\media\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.Development.json" CopyToPublishDirectory="Never" />
    <!-- temporary, until web config transforms are performed as part of deploy -->
    <Content Update="web*.config" CopyToOutputDirectory="Never" />
  </ItemGroup>

  <PropertyGroup>
    <CopyRazorGenerateFilesToPublishDirectory>true</CopyRazorGenerateFilesToPublishDirectory>
  </PropertyGroup>

  <!-- Set this to true if ModelsBuilder mode is not InMemoryAuto-->
  <PropertyGroup Condition="$(Configuration) == 'Release'">
    <RazorCompileOnBuild>true</RazorCompileOnBuild>
    <RazorCompileOnPublish>true</RazorCompileOnPublish>
  </PropertyGroup>

  <Target Name="NPM-Build" AfterTargets="Build">
    <Exec Command="npm install" WorkingDirectory="$(MSBuildWorkingDirectory)" Condition="$(Configuration) == 'Release'" />
    <Exec Command="npm run build" WorkingDirectory="$(MSBuildWorkingDirectory)" Condition="$(Configuration) == 'Release'" />
    <Exec Command="npm run build:dev" WorkingDirectory="$(MSBuildWorkingDirectory)" Condition="$(Configuration) == 'Debug'" />
    <Exec Command="npm run build-sass" WorkingDirectory="$(MSBuildWorkingDirectory)" />
  </Target>

</Project>
