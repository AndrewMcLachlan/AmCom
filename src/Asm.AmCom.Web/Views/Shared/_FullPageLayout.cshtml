@using static Microsoft.AspNetCore.Mvc.Razor.RazorPageExtensions

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head
{
    @RenderSection("Head", false)
}

@section Scripts
{
    @RenderSection("Scripts", false)
}

<article>
    <header>
        @RenderSection("PageHeader", false)
        @RenderSection("PageLink", false)
    </header>
    <div class="container">
        @RenderBody()
    </div>
</article>

@section Footer
{
    @RenderSection("FooterNotes", false)
    @this.RenderSection("Footer", Html, "_Footer")
}