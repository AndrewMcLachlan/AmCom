@model ContactModel
@{
    ViewBag.Title = "Contact - Andrew McLachlan";
}

@section Scripts
{
}

@section PageHeader
{
    <h1>Contact</h1>
}

<div class="row">
    <div class="col-md-9">
        <form method="post" asp-antiforgery="false">
            <fieldset>
                <legend>Please use this form to contact me</legend>
                @Html.ValidationSummary(String.Empty, new { @class = "alert alert-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Message, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-envelope"></span> Send</button>
            </fieldset>
        </form>
    </div>
</div>