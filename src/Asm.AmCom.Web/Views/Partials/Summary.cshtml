@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Extensions
@{
    var link = Model.Content.Link as IPublishedContent;
    var url = link?.Url();
}

<section class="@ViewData["ClassName"]">
    <header>
        <h3>@Model.Content.Title</h3>
    </header>
    <p>
        @Html.Raw(Model.Content.SummaryContent)
    </p>
    <a class="btn btn-primary btn-wide" href="@url" aria-label="@(Model.Content.LinkLabel)">read more</a>
</section>